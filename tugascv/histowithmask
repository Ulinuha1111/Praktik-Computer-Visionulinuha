import cv2
import numpy as np
from matplotlib import pyplot as plt
import os

def load_image():
    """Muat gambar utama dari folder images"""
    path = "images/trex.png"
    if not os.path.exists(path):
        raise FileNotFoundError("Gambar tidak ditemukan: images/trex.png")
    return cv2.imread(path)

def resize_for_display(image, max_width=500):
    """Perkecil gambar agar tampil nyaman di layar"""
    (h, w) = image.shape[:2]
    if w > max_width:
        r = max_width / w
        image = cv2.resize(image, (max_width, int(h * r)))
    return image

def main():
    # 1️⃣ Baca dan ubah ke grayscale
    image = resize_for_display(load_image())
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    cv2.imshow("Grayscale", gray)

    # 2️⃣ Buat mask (lingkaran di tengah)
    mask = np.zeros(gray.shape, dtype="uint8")
    center_x, center_y = gray.shape[1] // 2, gray.shape[0] // 2
    radius = 100
    cv2.circle(mask, (center_x, center_y), radius, 255, -1)
    cv2.imshow("Mask", mask)

    # 3️⃣ Terapkan mask pada gambar grayscale
    masked = cv2.bitwise_and(gray, gray, mask=mask)
    cv2.imshow("Masked Image", masked)

    # 4️⃣ Hitung histogram untuk full image dan masked area
    hist_full = cv2.calcHist([gray], [0], None, [256], [0, 256])
    hist_mask = cv2.calcHist([gray], [0], mask, [256], [0, 256])

    # 5️⃣ Tampilkan perbandingan histogram
    plt.figure("Histogram with Mask")
    plt.title("Histogram: Full Image vs Masked Area")
    plt.xlabel("Intensitas")
    plt.ylabel("Jumlah Piksel")
    plt.plot(hist_full, label="Full Image", color='blue')
    plt.plot(hist_mask, label="Masked Area", color='orange')
    plt.legend()
    plt.xlim([0, 256])
    plt.show()

    cv2.waitKey(0)
    cv2.destroyAllWindows()

if __name__ == "__main__":
    main()
